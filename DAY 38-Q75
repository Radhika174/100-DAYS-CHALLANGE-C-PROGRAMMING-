/*Q75: Add two matrices.

Sample Test Cases:
Input 1:
2 2
1 2
3 4
2 2
5 6
7 8
Output 1:
6 8
10 12

*/

#include <stdio.h>

int main()
{
    int r1,r2,c2,c1;
    printf("Enter the row and column size of  array");
    scanf("%d%d",&r1,&c1);
    int a[r1][c1];
    int b[r1][c1];
    printf("Enter the numbers of the first array\n");
    
    for(int i=0;i<r1;++i)
    {
        for(int j=0;j<c1;++j)
        {
            printf("Enter a num");
            scanf("%d",&a[i][j]);
        }
    }
    printf("\nEnter the numbers of 2nd array");
    for(int i=0;i<r1;++i)
    {
        for(int j=0;j<c1;++j)
        {
            printf("Enter a num");
            scanf("%d",&b[i][j]);
        }
    }
    for(int i=0;i<r1;++i)
    {
        for(int j=0;j<c1;++j)
        {
            a[i][j]=a[i][j]+b[i][j];
        }
    }
     for(int i=0;i<r1;++i)
    {
        for(int j=0;j<c1;++j)
        {
            printf("\n%d",a[i][j]);
        }
        printf("\n");
    }
    return 0;
}
