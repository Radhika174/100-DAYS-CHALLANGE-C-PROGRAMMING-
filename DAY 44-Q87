/*Q87: Count spaces, digits, and special characters in a string.

Sample Test Cases:
Input 1:
a b1&2
Output 1:
Spaces=1, Digits=2, Special=1

*/
#include <stdio.h>
#include <string.h>
int main() 
{
    char strg[100];
    printf("Enter string");
    scanf("%[^\n]",strg);
    char ch;
    int d=0;
    int s=0;
    int w=0;
    for(int i=strlen(strg)-1;i>=0;i--)
    {
      ch=strg[i];
      if((ch>='A' && ch<='Z') || (ch>='a' && ch<='z'))
      {
          
      }
      else if(ch>='0' && ch<='9')
      d++;
      else if(ch==' ')
      w++;
      else
      s++;
      
      }
      printf("Digits = %d\n",d);
      printf("Special = %d\n",s);
      printf("Spaces = %d",w);

    return 0;
}
