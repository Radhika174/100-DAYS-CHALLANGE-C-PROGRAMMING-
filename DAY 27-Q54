/*Q54: Write a program to print the following pattern:

   *
  ***
 *****
*******
 *****
  ***
   *


Sample Test Cases:
Input 1:

Output 1:
Pattern with layers of stars as shown.

*/
#include <stdio.h>

int main()
{
    int m=7;
    for(int i=1;i<=m;i++)
    {
        if(i%2==0)
        {
            printf("\n");
        }
        else
        {
        for(int k=1;k<=(m-i);k++)
        {
            printf(" ");
        }
        for(int j=1;j<=i;j++)
        {
            printf("* ");
        }
        }
        
    }
    printf("\n");
    
     int n=5;
     for(int i=n;i>=1;i--)
    {
        if(i%2==0)
        {
            printf("\n");
        }
        else
        {
        for(int k=n+1;k>=i;--k)
        {
            printf(" ");
        }
         for (int j=1;j<=i;++j)
         { 
             
             printf("* ");
             
         }
        }
         
    }

    return 0;
}
