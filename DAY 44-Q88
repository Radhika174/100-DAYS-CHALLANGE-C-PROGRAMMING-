/*Q88: Replace spaces with hyphens in a string.

Sample Test Cases:
Input 1:
hello world
Output 1:
hello-world

*/
#include <stdio.h>
#include <string.h>
int main() 
{
    char strg[100];
    printf("Enter string");
    scanf("%[^\n]",strg);
    char ch;
    char news[100];
    for(int i=strlen(strg)-1;i>=0;i--)
    {
      ch=strg[i];
      if(ch==' ')
      ch='-';
      news[i]=ch;
      }
      printf("%s",news);

    return 0;
}
